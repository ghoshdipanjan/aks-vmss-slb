    "parameters": {
        "aksServicePrincipalAppId": {
            "type": "string",
            "metadata": {
                "description": "Application ID/Client ID  of the service principal. Used by AKS to manage AKS related resources on Azure like vms, subnets."
            }
        },
        "aksServicePrincipalClientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "Secret of the service principal. Used by AKS to manage Azure."
            }
        },
        "aksServicePrincipalObjectId": {
            "type": "string",
            "metadata": {
                "description": "Object ID of the service principal."
            }
        },
        "aksDnsPrefix": {
            "defaultValue": "aks",
            "type": "string",
            "metadata": {
                "description": "Optional DNS prefix to use with hosted Kubernetes API server FQDN."
            }
        },
        "aksAgentOsDiskSizeGB": {
            "defaultValue": 250,
            "minValue": 30,
            "maxValue": 1023,
            "type": "int",
            "metadata": {
                "description": "Disk size (in GB) to provision for each of the agent pool nodes. This value ranges from 30 to 1023."
            }
        },
        "maxPods": {
            "type": "int",
            "minValue": 10,
            "maxValue": 120,
            "defaultValue": 50
        },
        "networkPlugin": {
            "defaultValue": "azure",
            "type": "string",
            "allowedValues": [
                "azure",
                "kubenet"
            ]
        },
        "enablePodSecurityPolicy": {
            "type": "bool",
            "defaultValue": false
