        "enableHttpApplicationRouting": {
            "type": "bool",
            "defaultValue": false
        },
        "aksNodeCount": {
            "defaultValue": 3,
            "minValue": 1,
            "maxValue": 50,
            "type": "int",
            "metadata": {
                "description": "The default number of agent nodes for the cluster."
            }
